<div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel"
    aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Ask your Query</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form id="query" onsubmit="askQuery(event)">
                    <div class="form-group">
                        <label for="recipient-name" class="col-form-label">name:</label>
                        <input type="text" class="form-control" id="recipient-name" name="urname"
                            value="{{user.fname}}">
                    </div>
                    <div class="form-group col-md-12">
                        <label class="form-label">Query Category*</label>
                        <div class="form">
                            <select class="form-control" name="queryCategory" required>
                                <option class="active-selected" value="">Select Query Category</option>
                                {{#each viewprogram}}
                                <option value="{{this.program}}">{{this.program}}</option>
                                {{/each}}
                            </select>
                        </div>
                    </div>
                    <div class="form-group col-md-12">
                        <label class="form-label">Select Form*</label>
                        <div class="form">
                            <select class="form-control" name="selectForm" required>
                                <option class="active-selected" value="">Select Form</option>
                                {{#each viewcourses}}
                                <option value="{{this.course}}">{{this.course}}</option>
                                {{/each}}

                            </select>
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="message-text" class="col-form-label">Message:</label>
                        <textarea class="form-control" id="message-text" name="message" required></textarea>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                        <button type="submit" class="btn btn-primary" data-toggle="modal" data-target="#submitModal">
                            Submit</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="submitModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel"
    aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Ask your Query</h5>
                <button type="button" class="btn">
                    <a href="/quary"> My Queries</a>
                </button>
            </div>
            <div class="modal-body">
                <form method="get" action="/askQuary">
                    <div class="form-group">
                        <label for="recipient-name" class="col-form-label">Dear {{user.fname}},</label>
                        <p>We are in receipt of your query. your quary will be answered shortly.You may check the status
                            of your quary at <a href="/quary">My Queries</a></p>
                    </div>
                    <div>
                        <p>Best wishes, <br> Kingster University</p>
                    </div>
                    <div class="modal-footer">
                        <button type="button" onclick="closeModal()" id="close" class="close" data-dismiss="modal"
                            aria-label="Close">ok</button>
                        {{!-- <button type="" class="btn btn-primary">ok</button> --}}
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<script src="js/jquery-3.5.1.min.js"></script>
<script>
    function closeModal() {
        $("#exampleModal").modal('hide');
    };

    function askQuery(e) {
        e.preventDefault()

        $.ajax({
            url: "/getquery",
            method: "POST",
            data: $('#query').serialize()

        })
    }
</script>
