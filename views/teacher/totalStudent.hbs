<!-- Header Layout Content -->
<div class="mdk-header-layout__content">

    <div data-push data-responsive-width="992px" class="mdk-drawer-layout js-mdk-drawer-layout">
        <div class="mdk-drawer-layout__content page ">

            <div class="container-fluid page__container">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="instructor-dashboard.html">Home</a></li>
                    <li class="breadcrumb-item active">Dashboard</li>
                </ol>
                <h1 class="h2">Dashboard</h1>
                <div class="row">
                    <div class="col-lg-6">

                        <div class="card">
                            <div class="card-header d-flex align-items-center">
                                <div class="flex">
                                    <h4 class="card-title">Departments</h4>
                                    <p class="card-subtitle">→ Courses</p>
                                </div>

                            </div>
                            <div data-toggle="lists" data-lists-values='[
                     
                    "js-lists-values-department"
                    "js-lists-values-course",
                    
                ]' data-lists-sort-by="js-lists-values-date" data-lists-sort-desc="true" class="table-responsive">
                                <table class="table table-nowrap m-0">
                                    <thead class="thead-light">
                                        <tr>
                                            <th colspan="2">
                                                <a href="javascript:void(0)" class="sort"
                                                    data-sort="js-lists-values-amount">Department</a>
                                                <a href="javascript:void(0)" class="sort"
                                                    data-sort="js-lists-values-document">Course</a>
                                            </th>
                                        </tr>
                                    </thead>
                                    <tbody class="list">

                                        <tr>
                                            <td>
                                                <div class="media align-items-center">
                                                    <div class="media-body">
                                                        <strong>● {{studentProgram.[0].department}}</strong><br>
                                                        <small class="text-muted mr-1">

                                                            <a href="instructor-invoice.html" style="color: inherit;"
                                                                class="js-lists-values-document"></a><span
                                                                class="js-lists-values-amount"></span>
                                                        </small>
                                                    </div>
                                                </div>
                                                <div class="media align-items-center">
                                                    <div class="media-body">
                                                        <strong>-{{studentProgram.[0].program.program}}</strong><br>
                                                        <small class="text-muted mr-1">

                                                            <a href="instructor-invoice.html" style="color: inherit;"
                                                                class="js-lists-values-document"></a><span
                                                                class="js-lists-values-amount"></span>
                                                        </small>
                                                    </div>
                                                </div>
                                            </td>
                                        </tr>
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                    <div class="col-lg-6">
                        <div class="card">
                            <div class="card-header d-flex align-items-center">
                                <div class="flex">
                                    <h4 class="card-title">Total</h4>
                                </div>
                            </div>
                            <ul class="list-group list-group-fit mb-0">
                                <li class="list-group-item">
                                    <div class="media align-items-center">
                                        <div class="media-body">
                                            <strong>- No.Of
                                                    Students in {{studentProgram.[0].program.program}}</strong>
                                        </div>
                                        <div class="media-right">
                                            <div class="text-center">
                                                <span class="badge badge-pill badge-success">{{totalStudents}}</span>
                                            </div>
                                        </div>
                                    </div>
                                </li>
                            </ul>
                        </div>
                    </div>
                    <div>

                    </div>

                        <h3 class="card-title">Students List</h3>
                    <table id="example" class="table col-12 table-striped table-bordered" style="width:100%">
                        <thead>
                            <tr>
                                <th>Name</th>
                                <th>Email</th>
                                <th>Phone No.</th>
                            </tr>
                        </thead>
                        <tbody>
                            {{#each programDetails}}
                            <tr>
                                <td>{{this.userId.fname}}{{this.userId.lname}}</td>
                                <td>{{this.userId.email}}</td>
                                <td>{{this.userId.mobile}}</td>
                            </tr>
                            {{/each}}

                        </tbody>

                    </table>
                    <script>
                        // $(document).ready(function () {
                        //});//

                        document.addEventListener("DOMContentLoaded", function () {
                            // code...
                            const table = document.getElementById('example')
                            new DataTable(table, {
                                width: '100%'
                            });
                            //$('#example').DataTable();
                        });
                    </script>

                    <style>
                        .dataTable-wrapper {
                            width: 100% !important;
                        }
                    </style>
                </div>
            </div>

        </div>
        <link href="https://unpkg.com/vanilla-datatables@latest/dist/vanilla-dataTables.min.css" rel="stylesheet" type="text/css">
<script src="https://unpkg.com/vanilla-datatables@latest/dist/vanilla-dataTables.min.js" type="text/javascript"></script>